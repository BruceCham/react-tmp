.layoutUi
  position: relative
  z-index: 999
.layoutUi-shade
  position: fixed
  left: 0
  top: 0
  right: 0
  bottom: 0
  height: 100%
  background-color: rgba(0,0,0,.75)
.layoutUi-main
  position: fixed
  left: 0
  top: 0
  width: 100%
  height: 100%
  outline: 0
  display: flex
  justify-content: center
  align-items: center
  flex-direction: column